    <script>
        $(() => {
            $("#bookmark_title").on("change", function(){$(".preview_bookmark .name").html($(this).val());});
            $("#bookmark_subtitle").on("change", function(){if($(this).val() !== ""){$(".preview_bookmark .name").removeClass("large");}else{$(".preview_bookmark .name").addClass("large");} $(".preview_bookmark .name_sub").html($(this).val());});
        
            // Color Pickers
            $('#bookmark_bg_color').jPicker(
            {
            window:
            {
                alphaSupport:true,
                expandable: true
            },
            color:
            {
                alphaSupport: true,
                active: new $.jPicker.Color({ ahex: '99330099' })
            }
            }, function (color, context) {
                var all = color.val('all');
                var hex = $(this).val(); 
                if (all.a != null) {
                    var c = calc_in_to_hex(all.a);
                    //embedding hex of Alpha with the original string of rgb Hex
                    $(this).val($(this).val() + c);
                }

                alert("linear-gradient(180deg, #"+ $(this).val() +" 0%, #"+ hex +" 90%)");
                $(".preview_bookmark .bg_color").css("background", "linear-gradient(180deg, #"+ $(this).val() +" 0%, #"+ hex +" 90%)");
            });

            $('#bookmark_icon_color').jPicker(
            {
            window:
            {
                alphaSupport:true,
                expandable: true
            },
            color:
            {
                alphaSupport: true,
                active: new $.jPicker.Color({ ahex: '99330099' })
            }
            }, function (color, context) {
                var all = color.val('all');
                if (all.a != null) {
                    var c = calc_in_to_hex(all.a);
                    //embedding hex of Alpha with the original string of rgb Hex
                    $(this).val($(this).val() + c);
                }

                $(".preview_bookmark .logo").css("background-color", "#" + $(this).val());
            });
        })

        // function to convert int to Hex and return it back
        function calc_in_to_hex(color) {
            var result = (color | 0).toString(16);
            if (result.length == 1) result = ('0' + result);
            return result.toLowerCase();
        }
    </script>
